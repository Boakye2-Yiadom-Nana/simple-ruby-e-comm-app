<%= form_with model: product, multipart: true, class: "form" do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :featured_image %>
    <%= form.file_field :featured_image, accept: "image/*", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :inventory_count %>
    <%= form.number_field :inventory_count, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save Product", class: "btn-primary" %>
  </div>
<% end %>
